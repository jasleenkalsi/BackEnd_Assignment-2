{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*", "src/*"]
        }
    },
    "include": ["src/**/*.ts", "test/**/*.ts", "config/**/*", "src/api/v1/controllers"],
    "exclude": ["node_modules", "dist"]
}
